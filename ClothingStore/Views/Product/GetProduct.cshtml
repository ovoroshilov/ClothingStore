@model Product
@{
    ViewData["Title"] = "Get Car";
    Layout = "_Layout";
}

<form>
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content("~/" + Model.ImagePath)" width="512" height="512" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <h2>@Model.Name</h2>
                <p>@Model.Price</p>
                <p>@Model.ClotheType</p>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</form>
